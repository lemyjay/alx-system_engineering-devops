#!/usr/bin/env bash
# A script to reload Gunicorn without downtime

# Get the PID of the Gunicorn master process
PID=$(ps aux | grep '[g]unicorn.*master' | awk '{print $2}')

# Check if Gunicorn is running
if [ -z "$PID" ]; then
    echo "Gunicorn is not running."
    exit 1
fi

# Send a HUP signal to the Gunicorn master process
kill -HUP $PID

echo "Gunicorn reloaded gracefully."

